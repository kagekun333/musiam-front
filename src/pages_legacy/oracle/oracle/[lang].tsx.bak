          <button onClick={() => setMode("photo")} className="px-3 py-1 text-sm" style={{ background: mode==="photo" ? "#eef2ff" : "white" }}>{t.tabs.photo}</button>
        </div>

        {mode==="card" && (
          <div className="inline-flex rounded-xl overflow-hidden border">
            <button onClick={() => setCardFace("front")} className="px-3 py-1 text-sm" style={{ background: cardFace==="front" ? "#eef2ff" : "white" }}>{lang==="ja"?"è¡¨":"Front"}</button>
            <button onClick={() => setCardFace("back")} className="px-3 py-1 text-sm" style={{ background: cardFace==="back" ? "#eef2ff" : "white" }}>{lang==="ja"?"è£":"Back"}</button>
